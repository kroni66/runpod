{
  "name": "runpod-desktop-manager",
  "version": "0.1.0",
  "description": "Electron desktop app for managing Runpod.io pods",
  "main": "electron/main.ts",
  "scripts": {
    "dev": "concurrently -k -r \"vite\" \"electron .\"",
    "build": "vite build && electron-builder",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.runpod.desktopmanager",
    "files": [
      "dist",
      "electron",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "electron": "^28.1.3",
    "electron-store": "^8.1.0",
    "node-fetch": "^3.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.18",
    "@types/styled-components": "^6.0.2",
    "concurrently": "^8.2.2",
    "electron-builder": "^24.14.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.7",
    "vite-plugin-electron": "^0.15.2"
  }
}